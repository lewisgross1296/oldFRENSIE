<ParameterList name="Source">
  
  <ParameterList name="Distributed Source">
    <Parameter name="Id" type="int" value="1"/>

    <Parameter name="Particle Type" type="string" value="Photon"/>
    
    <ParameterList name="Spatial Distribution">
      <Parameter name="Position" type="Array(double)" value="{1,1,1}"/>
    </ParameterList>

    <ParameterList name="Directional Distribution">
      <Parameter name="Mu Distribution" type="Delta Distribution"
                 value="{1}"/>
      <Parameter name="Theta Distribution" type="Delta Distribution"
                 value="{0}"/>
    </ParameterList>
    
    <Parameter name="Energy Distribution" type="Delta Distribution" 
               value="{1}"/>
  </ParameterList>

</ParameterList>
